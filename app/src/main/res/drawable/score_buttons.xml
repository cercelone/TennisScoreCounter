<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!--apply button background transparent, full opacity-->
            <gradient android:angle="90" android:centerColor="#808BC34A" android:endColor="#8033691E" android:gradientRadius="90" android:startColor="#DCEDC8" android:type="linear" />
            <!--make button border solid color, nontransparent-->
            <stroke android:width="2dp" android:color="#20ffffff" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>